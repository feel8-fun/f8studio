{
  "$id": "https://studio.feel8.fun/schemas/operator.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "f8 operator spec",
  "type": "object",
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "f8operator/1"
    },
    "operatorClass": {
      "type": "string",
      "description": "Reverse-DNS style id for this operator kind (e.g., fun.feel8.op.js-script)"
    },
    "label": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "state": {
      "type": "array",
      "items": {
        "$ref": "./common.schema.json#/definitions/stateField"
      },
      "default": []
    },
    "allowAddState": {
      "type": "boolean",
      "default": false
    },
    "commands": {
      "type": "array",
      "description": "Optional RPC-style commands the node can invoke (e.g., refresh/connect/disconnect)",
      "items": {
        "$ref": "./common.schema.json#/definitions/command"
      },
      "default": []
    },
    "allowAddCommands": {
      "type": "boolean",
      "default": false,
      "description": "Allow dynamic addition of commands beyond the declared list."
    },
    "execInPorts": {
      "type": "array",
      "description": "Execution inputs (can be empty for entry/pull-only nodes). Each execIn port may have only one incoming exec link.",
      "items": { "type": "string" },
      "default": []
    },
    "execOutPorts": {
      "type": "array",
      "description": "Execution outputs (can be empty for terminal/pull-only nodes). Operator logic decides which execOut to trigger.",
      "items": { "type": "string" },
      "default": []
    },
    "allowAddExecInPorts": {
      "type": "boolean",
      "default": false
    },
    "allowAddExecOutPorts": {
      "type": "boolean",
      "default": false
    },    
    "dataInPorts": {
      "type": "array",
      "description": "Data input ports (can be empty).",
      "items": {
        "$ref": "./common.schema.json#/definitions/port"
      },
      "default": []
    },
    "dataOutPorts": {
      "type": "array",
      "description": "Data output ports (can be empty).",
      "items": {
        "$ref": "./common.schema.json#/definitions/port"
      },
      "default": []
    },
    "allowAddDataInPorts": {
      "type": "boolean",
      "default": false,
      "description": "Allow dynamic addition of data input ports."
    },
    "allowAddDataOutPorts": {
      "type": "boolean",
      "default": false,
      "description": "Allow dynamic addition of data output ports."
    },
    "rendererId": {
      "type": "string",
      "description": "Optional custom UI renderer key for this operator node (e.g., realtimePlot, 3dViewer)"
    },
    "rendererProps": {
      "type": "object",
      "description": "Optional renderer-specific configuration for the custom node UI",
      "additionalProperties": true
    }
  },
  "required": [
    "schemaVersion",
    "operatorClass",
    "label"
  ],
  "additionalProperties": false
}
