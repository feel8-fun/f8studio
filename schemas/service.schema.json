{
  "$id": "https://studio.feel8.fun/schemas/service.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ServiceSpec",
  "type": "object",
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "f8service/1"
    },
    "serviceClass": {
      "type": "string",
      "description": "Reverse-DNS style id, e.g., fun.feel8.engine"
    },
    "version": {
      "type": "string",
      "description": "SemVer of the service profile",
      "default": "0.0.0"
    },
    "label": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "launch": {
      "type": "object",
      "properties": {
        "command": {
          "type": "string",
          "description": "Executable path or name"
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "env": {
          "type": "object",
          "default": {},
          "additionalProperties": {
            "type": "string"
          }
        },
        "workdir": {
          "type": "string",
          "default": "./"
        }
      },
      "required": [
        "command"
      ],
      "additionalProperties": false
    },
    "states": {
      "type": "array",
      "items": {
        "$ref": "./common.schema.json#/definitions/stateField"
      },
      "description": "Static state model; keys become state manager entries"
    },
    "allowAddStates": {
      "type": "boolean",
      "default": false,
      "description": "Allow dynamic user-added state entries"
    },
    "commands": {
      "type": "array",
      "items": {
        "$ref": "./common.schema.json#/definitions/command"
      },
      "default": []
    },
    "allowAddCommands": {
      "type": "boolean",
      "default": false,
      "description": "Allow dynamic addition of commands beyond the declared list."
    },
    "dataInPorts": {
      "type": "array",
      "description": "Data bus inputs exposed by this service (for cross-instance data pub/sub).",
      "items": {
        "$ref": "./common.schema.json#/definitions/dataPort"
      },
      "default": []
    },
    "dataOutPorts": {
      "type": "array",
      "description": "Data bus outputs exposed by this service.",
      "items": {
        "$ref": "./common.schema.json#/definitions/dataPort"
      },
      "default": []
    },
    "allowAddDataInPorts": {
      "type": "boolean",
      "default": false,
      "description": "Allow dynamic addition of data input ports."
    },
    "allowAddDataOutPorts": {
      "type": "boolean",
      "default": false,
      "description": "Allow dynamic addition of data output ports."
    },
    "rendererClass": {
      "type": "string",
      "default": "default",
      "description": "Optional custom UI renderer key for the node (e.g., realtimePlot, 3dViewer)"
    },
    "rendererProps": {
      "type": "object",
      "default": {},
      "description": "Optional renderer-specific configuration for the custom node UI",
      "additionalProperties": true
    }
  },
  "required": [
    "serviceClass",
    "label"
  ],
  "additionalProperties": true
}